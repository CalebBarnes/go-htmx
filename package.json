{
  "name": "go-htmx",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "air & npm run browser-sync & npm run watch",
    "watch": "tailwindcss build -i global.css -o static/css/tailwind.css --watch",
    "build": "go build -o .dist/main.go -ldflags \"-X 'main.version=$(git rev-parse HEAD)'\" && tailwindcss build -i global.css -o static/css/tailwind.css",
    "start": "npm run build && ./.dist/main.go",
    "browser-sync": "browser-sync start --proxy localhost:42069 --files 'static/css/*.css, templates/*.html, *.go' --no-notify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "tailwindcss": "^3.3.3"
  }
}
