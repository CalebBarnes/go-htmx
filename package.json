{
  "name": "go-htmx",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npx figlet-cli CookieCloud && concurrently \"$(go env GOPATH)/bin/air\" \"npm run watch:css\" \"npm run browser-sync\"",
    "watch": "tailwindcss build -i global.css -o static/css/tailwind.css --watch --minify",
    "build": "go build -o .dist/main.go -ldflags \"-X 'main.version=$(git rev-parse HEAD)'\" && npm run build:css",
    "prestart": "git config --global --add safe.directory /app",
    "start": "npm run build && ./.dist/main.go",
    "browser-sync": "browser-sync start --proxy localhost:42069 --files 'static/css/*.css, src/templates/*.html, src/components/**/*.html, *.go' --no-notify --plugins 'bs-html-injector?files[]=*.html'",
    "watch:css-bundle": "chokidar src/**/*.css -c 'mkdir -p tmp && touch tmp/bundle.css && cat src/styles/global.css ./src/styles/*.css > ./tmp/bundle.css'",
    "watch:css-postcss": "postcss -o .generated/css/main.css tmp/bundle.css --watch",
    "watch:css": "concurrently \"npm run watch:css-bundle\" \"npm run watch:css-postcss\"",
    "build:css-bundle": "mkdir -p .tmp && touch .tmp/bundle.css && cat src/styles/global.css ./src/styles/*.css > ./.tmp/bundle.css",
    "build:css": "npm run build:css-bundle && postcss -o static/css/main.css .tmp/bundle.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.10"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "bs-html-injector": "^3.0.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5"
  }
}
